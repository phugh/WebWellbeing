{
  "manifest_version": 2,
  "name": "Web Wellbeing",
  "short_name": "WebWellbeing",
  "version": "1.5",
  "description": "Helping you make mindful choices about your wellbeing online.",
  "author": "Peter Hughes",
  "homepage_url": "https://www.phugh.es/",
  "minimum_chrome_version": "49",
  "offline_enabled": true,
  "permissions": [
    "activeTab",
    "contextMenus",
    "storage",
    "tabs",
    "unlimitedStorage"
  ],
  "background": {
    "persistent": false,
    "scripts": [
      "content/js/lex.js",
      "content/js/function.js",
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["content/css/style.css"],
      "js": [
        "content/js/lex.js",
        "content/js/function.js",
        "content/js/content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "browser_action": {
    "default_icon": {
      "16": "img/16.png",
      "32": "img/32.png",
      "48": "img/48.png",
      "128": "img/128.png",
      "512": "img/512.png"
    },
    "default_popup": "popup/popup.html",
    "default_title": "View this site's wellbeing statistics"
  },
  "options_ui": {
    "page": "options/options.html",
    "chrome_style": false
  },
  "icons": {
    "16": "img/16.png",
    "32": "img/32.png",
    "48": "img/48.png",
    "128": "img/128.png",
    "512": "img/512.png"
  }
}